FROM arm64v8/alpine:latest

RUN apk add --no-cache curl \
    && curl -L -o /tmp/openwrt.tar.gz https://downloads.openwrt.org/releases/19.07.7/targets/arm64/generic/openwrt-19.07.7-arm64-generic-rootfs.tar.gz \
    && tar -C / -xzf /tmp/openwrt.tar.gz \
    && rm /tmp/openwrt.tar.gz

CMD ["/bin/sh"]